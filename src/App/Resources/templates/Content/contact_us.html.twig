{% extends '@App/base.html.twig' %}
{% import "@App/Common/Blocks/header.html.twig" as  header %}
{% import '@App/Components/Buttons/button.html.twig' as button %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/contact_us.css') }}" rel="stylesheet">
{% endblock %}



{% block header_content %}
    {{ header.render('Contact us') }}
{% endblock header_content %}


{% block body %}
    <div class="d-flex flex-column" style="width: 100%;">
        <div class=" justify-content-center contact_us__disclaimer">
            <div class=" text-center">
                <p>Do you have any question about 100% sport? </p>
            </div>
        </div>
        <div class=" justify-content-center contact_us__disclaimer">
            <div class=" text-center">
                <p>We will give you straight answers!</p>
            </div>
        </div>

        <div class="contact_us__form">
            {{ form_start(form) }}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('contact-us') }}" />

            <div style="margin-top: 20px; margin-bottom: 40px;" class="form-group">
                <div class="contact_us__form-header">
                    Contact us using our contact form below
                </div>
            </div>


            <div class="form-group">
                <label>{{ form_label(form.email) }}<span class="text-danger">*</span></label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <label>{{ form_label(form.comment) }}<span class="text-danger">*</span></label>
            {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
            <div>
                <span class="text-danger">*</span>Mandatory fields
            </div>


            <div class="text-center">
                {{ button.renderSubmitButton('Send') }}
            </div>


            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

