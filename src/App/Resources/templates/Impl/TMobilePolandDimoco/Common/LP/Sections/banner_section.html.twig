{% macro render() %}
    {% import importTemplate("Components/Blocks/Main/banner.html.twig") as  banner %}

    <div class="d-flex align-items-center flex-column">
        {% if isClickableSubImage() %}
            {% if getCampaignData('banner') %}
                {{ banner.render(getCampaignData('banner'), 'banner', 'w-100 payment-banner', 1) }}
            {% else %}
                {{ banner.render(asset('img/lp/lp_banner.png'), 'banner', 'w-100 payment-banner', 1) }}
            {% endif %}
        {% else %}
            {% if getCampaignData('banner') %}
                <img src="{{ getCampaignData('banner') }}" class="w-100 payment-banner" alt="banner">
            {% else %}
                <img src="{{ asset('img/lp/lp_banner.png') }}" class="w-100 payment-banner" alt="banner">
            {% endif %}
        {% endif %}
    </div>
{% endmacro %}
