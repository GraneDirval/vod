{% extends '@App/base.html.twig' %}
{% import importTemplate("Common/LP/Sections/banner_section.html.twig") as banner_section %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .header-logo {
            width: 80px !important;
            height: 18px !important;
            margin: 0 !important;
        }

        .text-bold {
            font-weight: bold !important;
        }

        .prepayment-offer {
            line-height: 20px;
        }

        .prepayment-button {
            background-color: #d4457a;
            font-size: 20px;
            padding: 15px 0;
            color: white;
            text-transform: uppercase !important;
            font-weight: bold;
            border: none;
            border-radius: 15px;
            width: 100%;
        }

        .prepayment-text {
            line-height: 18px;
            font-size: 15px;
        }

        #prepayment-confirm-button input {
            width: 20px;
            height: 20px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(() => {
            $('#prepayment-confirm-button').submit((event) => {
                event.preventDefault();

                window.location.href = "{{ path('dimoco_payment') }}";
            })
        })
    </script>
{% endblock %}

{% block header %}
    <div class="d-flex flex-row justify-content-between mt-1">
        <div class="pl-2"><img src="{{ asset('img/carriers/tmobile-poland-dimoco/logo.png') }}" alt="logo"></div>
        <div class="text-bold">{{ translate('prepayment.header.title') }}</div>
        <div class="text-right mt-1"><span class="header-logo"></span></div>
    </div>
{% endblock header %}

{% block body %}
    <div class="d-flex flex-column w-100 mt-1">
        <div>{{ banner_section.render() }}</div>
        <div class="pl-5 pr-5 text-center mt-2 text-bold prepayment-offer">{{ translate('prepayment.offer') | raw }}</div>
        <div class="pr-3 pl-3">
            <form id="prepayment-confirm-button">
                <div class="mt-3 mb-4 text-center">
                    <button
                        type="submit"
                        class="prepayment-button"
                    >
                        {{ translate('prepayment.button') }}
                    </button>
                </div>
                <div class="prepayment-text">
                    <label>
                        <input type="checkbox" required>
                        <span>{{ translate('prepayment.info.1') }}</span>
                    </label>
                </div>
            </form>
            <div class="prepayment-text">
                <p>{{ translate('prepayment.info.2', {'%terms_url%': path('terms_and_conditions')}) | raw }}</p>
                <p>{{ translate('prepayment.info.3') }}</p>
                <p>{{ translate('prepayment.info.4', {'%terms_url%': path('terms_and_conditions')}) | raw }}</p>
                <p>{{ translate('prepayment.info.5') }}</p>
                <p>{{ translate('prepayment.info.6') }}</p>
            </div>
        </div>
        <div></div>
    </div>
{% endblock %}