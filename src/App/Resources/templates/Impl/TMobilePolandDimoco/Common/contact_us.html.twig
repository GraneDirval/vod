{% extends '@App/base.html.twig' %}
{% import importTemplate("Common/Blocks/header.html.twig") as  header %}
{% import '@App/Components/Buttons/button.html.twig' as button %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/contact_us.css') }}" rel="stylesheet">
{% endblock %}

{% block header_content %}
    {{ header.render(translate('contact_us.title')) }}
{% endblock header_content %}

{% block body %}
    <div class="d-flex flex-column w-100">
        <div class=" justify-content-center contact_us__disclaimer mt-4" style="padding: 0 5px">
            <div class=" text-center">
                <p>{{ translate('contact_us.text.1') }}</p>
            </div>
        </div>

        <div class="contact_us__form">
            {{ form_start(form) }}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('contact-us') }}"/>

            <div class="mt-4 mb-5 form-group">
                <div class="contact_us__form-header text-center">
                    {{ translate('contact_us.text.2') }}
                </div>
            </div>

            <div class="form-group">
                <label>{{ translate('contact_us.field.email') }}<span class="text-danger">*</span></label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <label>{{ translate('contact_us.field.comments') }}<span class="text-danger">*</span></label>
            {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
            <div class="mt-3">
                <span class="text-danger">*</span>{{ translate('contact_us.field.mandatory') }}
            </div>

            <div class="text-center mt-5">
                {{ button.renderSubmitButton(translate('buttons.send')) }}
            </div>

            {{ form_end(form) }}
        </div>
        <div class="text-center ml-1 mt-4 mb-2">
            {% if userIdentifier %}<span>{{ translate('contact_us.user.title') }}</span>: {{ userIdentifier }}.{% endif %}
            <span>{{ translate('contact_us.text.3') }}.</span>
            <span>{{ translate('contact_us.text.4') }}.</span>
        </div>
    </div>
{% endblock %}

