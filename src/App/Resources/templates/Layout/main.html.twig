{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
{% endblock %}

{% block header %}
    <header>
        <div class="d-flex align-items-center justify-content-between header-container">
            <a class="header-menu_icon" href="#">

            </a>
            <div class="header-logo">

            </div>
            <a class="header-user_icon" href="#">

            </a>
        </div>

        {% block header_page_subscription_container %}
            <div class="d-flex align-items-center justify-content-center header-page-subscription_container">
                <div class="text-center header-page-subscription_text">
                    You are subscribed to 100% sport
                </div>
            </div>
        {% endblock header_page_subscription_container %}

        {% block header_page_title_container %}
            <div class="d-flex align-items-center justify-content-center header-title_container">
                <div class="text-center header-title_content">
                    {% block header_page_title %}
                    {% endblock header_page_title %}
                </div>
            </div>
        {% endblock header_page_title_container %}

    </header>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
{% endblock %}

