    </div>



    {% if hasActiveSubscription() or isNotFullyPaid() %}
        <script>


            var trackEventRoute = '{{ url('track_video_percent_event') }}';

            $(window).on('load', function () {

                function makeCurrentlyPlaying(index) {
                    $('.modal-related-video').each(function () {
                        var elementIndex = $(this).attr('data-uuid');

                        if (index != elementIndex) {
                            $(this).removeClass('currently-playing')
                        } else {
                            $(this).addClass('currently-playing')
                        }
                    });
                }

                function openModal() {
                    $('#player-modal').addClass('d-flex');
                    $('html').css({'overflow-y': 'hidden'});
                }

                function closeModal() {
                    $('#player-modal').removeClass('d-flex');
                    $('html').css({'overflow-y': 'auto'});
                    demoplayer.stop();
                }

                function changeVideo(element) {
                    demoplayer.source(element);
                }

                var cld        = cloudinary.Cloudinary.new({cloud_name: '{{ getCloudName() }}'});
                var demoplayer = cld.videoPlayer('video-player-frame', {playedEventPercents: [50]})
                    .sourceTypes(['hls'])
                    .transformation({streaming_profile: 'hd'});


                demoplayer.on('percentsplayed', function (event) {

                    $.post(trackEventRoute, {
                        percent: event.eventData.percent,
                        video  : demoplayer.currentPublicId()
                    });
                });


                $(document).on('click', '.x-play-button', function () {
                    openModal();

                    let category                = $(this).attr('data-category');
                    let batchRelatedVideosRoute = '{{ url('load_more_related_videos') }}';

                    $.get(batchRelatedVideosRoute + '?categoryUuid=' + category, function (html) {
                        $('.modal-related-videos-block').html(html);
                    });

                    let indexVideo = $(this).attr('data-public-id')

                    changeVideo(indexVideo);
                    demoplayer.play();
                });

                $(document).on('click', '.x-modal-play-button', function () {
                    let index    = $(this).attr('data-uuid');
                    let indexVideo = $(this).attr('data-public-id')


                    changeVideo(indexVideo);
                    makeCurrentlyPlaying(index);
                    demoplayer.play();

                });

                $(document).on('click', '.x-close-modal-button', function () {
                    closeModal()
                });

            })
        </script>
    {% else %}
        <script>
            $(document).on('click', '.x-play-button', function () {
                window.location = '{{ path('landing') }}'
            })
        </script>
    {% endif %}

{% endmacro %}