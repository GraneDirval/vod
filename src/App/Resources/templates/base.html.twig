<!DOCTYPE html>
<html>
    <head>
        {% block metatags %}
            <title>{% block metatags_title %}Welcome!{% endblock metatags_title %}</title>
        {% endblock metatags %}

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
                  integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
                  crossorigin="anonymous"/>
            <link href="https://fonts.googleapis.com/css?family=Kanit:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
            <link rel="stylesheet" href="/css/vod.css"/>
        {% endblock stylesheets %}
    </head>

    <body class="d-flex flex-column min-vh-100">
        {% block header %}
            <header class="d-flex align-items-center justify-content-center">
                {% block header_content %}
                {% endblock header_content %}
            </header>
        {% endblock header %}

        <main class="d-flex media-body">
            {% block body %}

            {% endblock body %}
        </main>

        {% block footer %}
            <footer class="d-flex flex-column align-items-center justify-content-center">
                {% block footer_content %}
                {% endblock footer_content %}
                <div class="d-flex copyright">
                    Â© {{ "now"|date("Y") }} {{ translate('copyright') }}
                </div>
            </footer>
        {% endblock footer %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% endblock javascripts %}
    </body>
</html>