{% extends '@App/base.html.twig' %}

{# IMPORT SECTIONS #}
{% import "@App/Common/landing/wifi/play_text_section.html.twig" as play_text_section %}
{% import "@App/Common/landing/banner_section.html.twig" as banner_section %}
{% import "@App/Common/landing/sub_btn_section.html.twig" as sub_btn_section %}
{% import "@App/Common/landing/offer_section.html.twig" as offer_section %}
{% import "@App/Common/landing/icons_chanel_section.html.twig" as icons_chanel_section %}
{% import "@App/Common/landing/lure_text_section.html.twig" as lure_text_section %}
{# END IMPORT SECTIONS #}

{% block header_content %}
    {{ header.render() }}
{% endblock header_content %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/lp.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="d-flex flex-column align-items-center justify-content-top w-100" {% if background %} style="background: {{ background }}" {% endif %}>

        <!-- PLAY TEXT SECTION -->
        {{ play_text_section.render() }}
        <!-- END PLAY TEXT SECTION-->

        <!-- BANNER SECTION WITH SUB IMAGE -->
        {{ banner_section.render(campaignBanner) }}
        <!-- END BANNER SECTION WITH SUB IMAGE -->

        <!-- SUBSCRIBE BUTTON SECTION -->
        {{ sub_btn_section.render() }}
        <!-- END SUBSCRIBE BUTTON SECTION -->

        <!-- OFFER SECTION -->
        {{ offer_section.render() }}
        <!-- END OFFER SECTION -->

        <!-- ICONS CHANEL SECTION -->
        {{ icons_chanel_section.render() }}
        <!-- END ICONS CHANEL SECTION -->

        <!-- LURE TEXT SECTION  -->
        {{  lure_text_section.render() }}
        <!-- END LURE TEXT SECTION -->

    </div>
{% endblock body %}

{% block footer_content %}
    {% if isCarrierDetected() %}
        {{ annotation.render() }}
    {% endif %}
    {{ footer_menu.render() }}
{% endblock footer_content %}