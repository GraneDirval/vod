{% macro render(bannerPath) %}
    {% import importTemplate("Components/Blocks/Main/banner.html.twig") as  banner %}
    {% import importTemplate("Common/LP/Sections/Wifi/subscribe_button_section.html.twig") as sub_btn_section %}

    {% if bannerPath is not defined %}
        {% set bannerPath = asset('img/lp/lp_subscribe_video.png') %}
    {% endif %}

    <div class="d-flex align-items-center flex-column">
        {% if isClickableSubImage() %}
            {% if getCampaignData('banner') %}
                {{ banner.render(getCampaignData('banner'), 'banner', 'w-100', 1) }}
            {% else %}
                {{ banner.render(bannerPath, 'banner', 'w-100', 1) }}
            {% endif %}
        {% else %}
            {% if getCampaignData('banner') %}
                <img src="{{ getCampaignData('banner') }}" class="w-100" alt="banner">
            {% else %}
                <img src="{{ asset('img/lp/lp_subscribe_video.png') }}" class="w-100" alt="banner">
            {% endif %}
        {% endif %}
    </div>
{% endmacro %}
