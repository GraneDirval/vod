{% extends '@App/base.html.twig' %}
{% import "@App/Components/Blocks/Header/header_lp.html.twig" as  header %}
{% import "@App/Components/Blocks/Footer/annotation.html.twig" as  annotation %}
{% import "@App/Components/Blocks/Footer/menu.html.twig" as  footer_menu %}
{% import "@App/Components/Blocks/Main/lure.html.twig" as  red_lure_block %}
{% import "@App/Components/Blocks/Main/banner.html.twig" as  banner %}
{% import "@App/Components/Blocks/Main/icons_channels.html.twig" as  icons_channels %}
{% import "@App/Components/subscribe_buttons.html.twig" as subscribe_buttons %}

{% block header_content %}
    {{ header.render() }}
{% endblock header_content %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/lp.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="d-flex flex-column align-items-center justify-content-top w-100 lp" {% if background %} style="background: {{ background }}" {% endif %}>

        <div class="d-flex align-items-start justify-content-center mb-n-2 lp-sub-btn lp-sub-btn-top">
            {{ subscribe_buttons.render('buttons.subscribe', 'btn-lp_big') }}
        </div>

        <div class="d-flex align-items-center justify-content-center">
            {% if campaignBanner %}
                {{ banner.render(campaignBanner, 'banner', 'w-100', 1) }}
            {% else %}
                {{ banner.render(asset('img/lp/lp_subscribe_video.png'), 'banner', 'w-100', 1) }}
            {% endif %}
        </div>

        <div class="d-flex align-items-start justify-content-center mb-n-2 lp-sub-btn lp-sub-btn-bottom">
            {{ subscribe_buttons.render('buttons.subscribe', 'btn-lp_big') }}
        </div>

        <div class="mt-2 sub-info">
            <p>250 EGP / day</p>
            <a href="#">Contact US</a>/ To cancel: <a href="#">My Account</a>
            <p>Subscription will be renewed daily unless you unsubscribe</p>
        </div>

        <div class="lure_box_wrapper mt-3">
            {% if isCarrierDetected() %}
                {{ annotation.render() }}
            {% endif %}

            {% include "@App/Common/landing_offer.html.twig" %}
        </div>

        <div class="align-items-center justify-content-center row mx-4">
            {{ icons_channels.render() }}
        </div>
        {#<div class="d-flex align-items-center justify-content-center">
            {{ subscribe_buttons.render(carriers, 'mh-90') }}
        </div>#}
        <div class="lure_box_wrapper">
            {{ red_lure_block.render(translate('lure_block.text')) }}
        </div>
    </div>
{% endblock body %}

{% block footer_content %}
    {% if isWifiFlow() %}
        <div id="terms-and-conditions" tabindex="1">
            <span>
                <input name="terms" id="terms-and-conditions-checkbox" type="checkbox" required />
                {{ translate('wifi.terms_confirmation', {'%terms_url%': path('terms_and_conditions')}) | raw }}
            </span>
        </div>
    {% endif %}
    {{ footer_menu.render() }}
{% endblock footer_content %}