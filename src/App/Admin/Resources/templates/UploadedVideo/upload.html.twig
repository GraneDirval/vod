{% extends base_template %}

{% block title %}
    {{ "Upload file" }}
{% endblock %}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}

{% block form %}
    <span hidden id="subCategoryUrl">{{ path('admin_app_domain_subcategory_subcategoriesList', {'mainId': 'paramMainId'}) }}</span>
    {{ form_start(form) }}
    <div class="sonata-ba-form">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ block('title') }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_widget(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="well well-small form-actions form-actions-stuck">
            <button type="submit" class="btn btn-success" name="btn_update_and_edit"><i class="fa fa-save"></i>
                Upload
            </button>
        </div>
        {{ form_end(form) }}
    </div>
    <script>
        function FormControl() {
            /**
             * Selectors for form fields
             */
            this.mainCategory = '#uploaded_video_form_mainCategory';
            this.subcategory = '#uploaded_video_form_subcategory';
            this.title = '#uploaded_video_form_title';

            /**
             * Load subcategories list and pass options to select field
             *
             * @param {string} url
             */
            this.loadSubCategories = function(url) {
                var self = this;
                var loader = $('<i>Loading subcategories...</i>');

                $(this.mainCategory).closest('div').append(loader);
                this.clearSubcategoryOptions();

                $.ajax({
                    url: url,
                    method: 'GET',
                    success: function(data) {
                        var subcategories = JSON.parse(data);
                        var subcategoriesSelect = $(self.subcategory);

                        subcategories.forEach(function(subcategory) {
                            subcategoriesSelect.append(new Option(subcategory.title, subcategory.id));
                        });
                    }
                })
                    .fail(function() {
                        $(self.mainCategory).closest('div').effect('highlight', {'color': '#C43C35'}, 2000);
                    })
                    .always(function () {
                        loader.remove();
                    })
            };

            /**
             * After form will rendered, put categories fields after title input
             */
            this.replaceCategoryFieldsPosition = function() {
                var titleField = $(this.title).closest('div');
                var subcategoryField = $(this.subcategory).closest('div');
                var mainCategoryField = $(this.mainCategory).closest('div');

                titleField.after(subcategoryField);
                titleField.after(mainCategoryField);
            };

            /**
             * Remove all options from subcategory select and set default
             */
            this.clearSubcategoryOptions = function () {
                $(this.subcategory).html('').append(new Option('Select subcategory'));
            }
        }

        $(document).ready(function() {
            var formControl = new FormControl();
            formControl.replaceCategoryFieldsPosition();

            $(formControl.mainCategory).change(function() {
                formControl.clearSubcategoryOptions();

                if ($(this).val().length > 0) {
                    var url = $('#subCategoryUrl').text().replace('paramMainId', $(this).val());

                    formControl.loadSubCategories(url);
                }
            })
        })
    </script>
{% endblock %}
